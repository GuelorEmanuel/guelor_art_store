<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :subject %>
  <%= text_input f, :subject, placeholder: "Chat name"%>
  <%= error_tag f, :subject %>
  <%= array_input f, :emails%>
  <%= error_tag f, :emails %>
  <%= array_add_button f, :emails %>


  <div>
    <%= submit "Create" %>
  </div>
<% end %>



